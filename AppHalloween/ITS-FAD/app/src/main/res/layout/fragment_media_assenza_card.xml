<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentAssenza"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ElementApplicationCustom.CardMediaAssenza.MediaAssenzaCardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A3B18A"
            style="@style/circular_card"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="13dp"
                android:text="23/30"
                android:textColor="@color/white"
                android:textSize="36dp"
                android:textStyle="bold" />

            <Button
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="53dp"
                android:backgroundTint="#A3B18A"
                android:text="Media Generale"
                android:textSize="10dp"
                app:icon="@drawable/eye" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            style="@style/circular_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#830200"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="13dp"
                android:text="23%"
                android:textColor="@color/white"
                android:textSize="36dp"
                android:textStyle="bold" />

            <Button
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="53dp"
                android:backgroundTint="#830200"
                android:text="Assenze Totali"
                android:textSize="10dp"
                app:icon="@drawable/eye" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>